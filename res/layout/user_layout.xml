<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbe9e7"
    android:orientation="vertical"
    android:id="@+id/container" >
    <LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbe9e7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#ff5722" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="用户资料"
            android:textColor="#ffffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.tien.volley.toolbox.NetworkImageView
        android:id="@+id/avator_iv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:src="@drawable/avatar_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称:"
            android:textColor="#746254"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:textColor="#746254"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心情:"
            android:textColor="#746254"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mood_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:minHeight="80dip"
            android:text="这个家伙很懒，什么都没留下！"
            android:textColor="#746254"
            android:textSize="18sp" />
    </LinearLayout>

    <com.tien.ai.view.FButton
        android:id="@+id/ai_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:minHeight="70dip"
        android:minWidth="70dip"
        android:text="哇一下"
        android:textColor="@android:color/white"
        fbutton:buttonColor="@color/fbutton_color_alizarin"
        fbutton:cornerRadius="50dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:textSize="18sp"
            android:text="互动小游戏" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >
            <ImageView android:id="@+id/cycles_iv"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:src="@drawable/jsb"/>
            
            <ImageView android:id="@+id/dice_iv"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_marginLeft="10dip"
                android:src="@drawable/dice"/>
        </LinearLayout>
    </LinearLayout>
	
</LinearLayout>
</ScrollView>