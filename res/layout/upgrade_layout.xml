<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dip"
    android:layout_height="wrap_content"
    android:background="@drawable/sk_diolag_border_line"
    android:orientation="vertical"
    android:padding="1dip">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:text="@string/upgrade_title"
        android:textColor="#ff5722"
        android:textSize="22sp" />

     <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#ff5722" />
     
     <TextView
        android:id="@+id/percent_tv"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:gravity="center"
        android:textColor="#ff5722"
        android:text="0%"
        android:textSize="50sp" />
     <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#ff5722" />
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/wihte_red_btn_selector"
            android:text="取消"
            android:textColor="@color/sk_text_black_wihte_selector"
            android:textSize="18sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#ff5722" />

        <Button
            android:id="@+id/upgrade_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/wihte_red_btn_selector"
            android:text="升级"
            android:textColor="@color/sk_text_black_wihte_selector"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>